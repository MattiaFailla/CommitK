{
  "name": "commitkit",
  "displayName": "CommitKit",
  "description": "Git commit modal for VSCode - inspired by JetBrains IDEs",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "SCM Providers",
    "Other"
  ],
  "keywords": [
    "git",
    "commit",
    "scm",
    "version-control"
  ],
  "publisher": "commitkit",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/commitkit.git"
  },
  "main": "./dist/extension.js",
  "activationEvents": [
    "onCommand:commitkit.openCommitModal"
  ],
  "contributes": {
    "commands": [
      {
        "command": "commitkit.openCommitModal",
        "title": "Open Commit Window",
        "category": "CommitKit"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "commitkit.openCommitModal",
          "when": "gitOpenRepositoryCount != 0"
        }
      ],
      "scm/title": [
        {
          "command": "commitkit.openCommitModal",
          "when": "scmProvider == git",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "npm run build:extension && npm run build:webview",
    "build:extension": "tsc -p tsconfig.extension.json",
    "build:webview": "vite build",
    "watch": "concurrently \"npm run watch:extension\" \"npm run watch:webview\"",
    "watch:extension": "tsc -p tsconfig.extension.json --watch",
    "watch:webview": "vite build --watch",
    "package": "vsce package",
    "publish": "vsce publish",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc -p tsconfig.extension.json --noEmit && tsc -p tsconfig.webview.json --noEmit",
    "verify": "npm run build && npm test"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.8.10",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "@vitejs/plugin-react": "^4.1.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.53.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2",
    "vite": "^4.5.0",
    "vsce": "^2.15.0",
    "@types/react": "^18.2.63",
    "@types/react-dom": "^18.2.19"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
